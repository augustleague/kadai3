<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book_new, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %><br>
            <%= link_to @book.user.name, user_path(@book.user) %>
            </th>
            <th>
              <%= link_to @book.title, book_path %>
            </th>
            <th>
              <%= @book.body %>
            </th>
            <th>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %>
              <% end %>
            </th>
            <th>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-sm btn-danger' %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>