<% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, autofocus: true, id: "book_title"%>
        </div>
        <div class="form-group">
          <iabel for="book-opinion">Opinion</label><br>
          <%= f.text_field :body,  autofocus: true, id: "book-opinion"%>
        </div>
        <div class="foem-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <br>
      <a><%= link_to "Show", book_path(@book.id)%></a>
      <a><%= link_to "Back", books_path%></a>
    </div>
  </div>
</div>